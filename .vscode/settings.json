{
    "cortex-debug.gdbPath": "/usr/bin/gdb",
    "editor.codeActionsOnSave": {
        "source.fixAll": true
    },
    "editor.formatOnSave": true,
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.wordBasedSuggestions": false,
        "editor.suggest.insertMode": "replace",
        "editor.semanticHighlighting.enabled": true
    },
    "ceedlingExplorer.debugConfiguration": "Debug (Local)",
    "python.formatting.provider": "none",
    "files.exclude": {
        "**/*.pyc": {
            "when": "$(basename).py"
        },
        "**/__pycache__": true,
        ".pytest_cache": true,
        ".coverage": true
    },
    "files.associations": {
        "chip.h": "c",
        "pantalla.h": "c",
        "poncho.h": "c",
        "bspreloj.h": "c"
    }
}